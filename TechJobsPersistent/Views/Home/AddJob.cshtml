@model TechJobsPersistent.ViewModels.AddJobViewModel;

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Employer</label><br />
        <select asp-for="EmployerId" asp-items="Model.Employers"></select>
        <p><a asp-controller="Employer" asp-action="Add">Add Employer</a></p>
    </div>
    <div class="form-group">
        <label>Skills</label>
        @foreach (Skill skill in Model.Skills)
        {
            <br />
            <input type="checkbox" name="selectedSkills" value="@skill.Id" />
            <label>@skill.Name</label>

        }
        <p><a asp-controller="Skill" asp-action="Add">Add Skill</a></p>
    </div>
    <input type="submit" value="Add Job" />
</form>